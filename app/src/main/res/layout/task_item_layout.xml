<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/gray"
    android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

                <!-- Top Row: Title, Tag, and Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/tv_TaskTile_Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Task Title"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:id="@+id/tv_TaskTile_Tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#TAG"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:background="@color/white"
                            android:paddingHorizontal="30dp"
                            android:paddingVertical="2dp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/tv_TaskTile_Time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TIME: 00:00:00"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- Bottom Row: Archive, Image, Start, and Stop Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="2dp">

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabBtn_TaskTile_Archive"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_gravity="center"
                            android:layout_marginEnd="80dp"
                            android:backgroundTint="@color/gray"
                            android:src="@drawable/archive"
                            app:fabCustomSize="42dp"
                            app:maxImageSize="35dp"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabBtn_TaskTile_Image"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_marginEnd="4dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/image"
                            app:fabCustomSize="42dp"
                            app:maxImageSize="35dp"
                            android:backgroundTint="@android:color/darker_gray"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <Button
                            android:id="@+id/btn_TaskTile_Start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:text="START"
                            android:textColor="@android:color/white"
                            tools:ignore="TextContrastCheck" />

                        <Button
                            android:id="@+id/btn_TaskTile_Stop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STOP"
                            android:layout_marginStart="4dp"
                            android:backgroundTint="@android:color/holo_red_dark"
                            android:textColor="@android:color/white"
                            android:enabled="false"/>
                </LinearLayout>
        </LinearLayout>

</androidx.cardview.widget.CardView>
