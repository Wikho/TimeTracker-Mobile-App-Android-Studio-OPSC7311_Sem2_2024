<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/itemBreakLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_background_white"
    android:backgroundTint="@color/gray">

    <TextView
        android:id="@+id/tvBreakDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Break Date"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_background_white"
        android:backgroundTint="@color/mainGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="5dp">

    <ImageView
        android:id="@+id/ivBreakImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/image"
        android:contentDescription="Break Image"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvBreakDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"/>

        <!-- New TextView -->
        <TextView
            android:id="@+id/tvBreakLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration:"
            android:textSize="14sp"/>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>
