<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pomodoro.PomodoroFragment">

    <TextView
        android:id="@+id/tvTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:translationY="20dp" />


    <ImageButton
        android:id="@+id/PlayPTimerBtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="#00FFFFFF"
        android:importantForAccessibility="no"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:src="@drawable/playtimerbtn"
        android:translationX="165dp"
        android:translationY="575dp" />

    <ImageButton
        android:id="@+id/PausePTimerBtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="#00FFFFFF"
        android:importantForAccessibility="no"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:src="@drawable/pausetimerbtn"
        android:translationX="35dp"
        android:translationY="575dp" />

    <ImageButton
        android:id="@+id/CancelPTimerBtn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="#00FFFFFF"
        android:importantForAccessibility="no"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:src="@drawable/canceltimerbtn"
        android:translationX="300dp"
        android:translationY="575dp" />

    <TextView
        android:id="@+id/TimerValueTxt"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:text="@string/_00_00_00"
        android:textAlignment="center"
        android:textSize="48sp"
        android:textStyle="bold"
        android:translationX="85dp"
        android:translationY="300dp"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/TimerMinuteValueTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_pomodoro_minutes"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:textColorHint="#78909C"
        android:textStyle="bold"
        android:translationX="100dp"
        android:translationY="80dp" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple"
        android:padding="16dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/back"
        android:visibility="visible"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnBreakInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>