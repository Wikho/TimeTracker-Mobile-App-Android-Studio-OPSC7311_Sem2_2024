<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/itemTaskSessionBreakLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivSessionImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/image"
        android:contentDescription="Session Image"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSessionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Date"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvSessionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"/>

        <!-- New TextViews -->
        <TextView
            android:id="@+id/tvTotalBreaks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Breaks:"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvTotalBreakDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Break Duration:"
            android:textSize="14sp"/>

    </LinearLayout>
</LinearLayout>
