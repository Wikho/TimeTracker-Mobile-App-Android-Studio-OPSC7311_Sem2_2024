<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_session_started"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Task Name at the Top -->
    <TextView
        android:id="@+id/tvTaskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <!-- Total Task Time and Time Worked -->
    <TextView
        android:id="@+id/tvTaskTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time: 5:30 / 3:24"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp"/>

    <!-- Button to Start a Break -->
    <Button
        android:id="@+id/btnBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Break"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:paddingHorizontal="32dp"
        android:paddingVertical="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Small Stop Button -->
    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:layout_marginBottom="16dp"/>

    <!-- Notes Button -->
    <Button
        android:id="@+id/btnNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@android:color/holo_green_dark"
        android:textColor="@android:color/white"
        android:paddingHorizontal="24dp"
        android:paddingVertical="6dp"
        android:layout_marginBottom="24dp"/>

    <!-- Text Box Showing Time Left -->
    <TextView
        android:id="@+id/tvTimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have 3 min left or 2 hours and 35 min left to reach your minimum goal."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"/>

</LinearLayout>
