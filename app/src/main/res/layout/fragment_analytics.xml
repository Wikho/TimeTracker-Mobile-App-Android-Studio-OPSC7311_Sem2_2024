<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/analyticsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingVertical="16dp"
    android:gravity="center">

    <!-- Mode Selection Button and Info Icon -->
    <LinearLayout
        android:id="@+id/modeSelectionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btnSelectMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Mode" />

        <ImageButton
            android:id="@+id/btnInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_info"
            android:contentDescription="Info"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Filter Toggle Button -->
    <Button
        android:id="@+id/btnToggleFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter Off"
        android:layout_below="@id/modeSelectionContainer"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true" />

    <!-- Filters Container -->
    <LinearLayout
        android:id="@+id/filterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="8dp"
        android:layout_below="@id/btnToggleFilters">

        <!-- From and To Date Selectors -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From" />

        <EditText
            android:id="@+id/etFromDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To" />

        <EditText
            android:id="@+id/etToDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true" />

        <!-- Buttons for Day, Week, Month -->
        <LinearLayout
            android:id="@+id/dateRangeButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnDayFilter"
                android:text="Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp" />

            <Button
                android:id="@+id/btnWeekFilter"
                android:text="Week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp" />

            <Button
                android:id="@+id/btnMonthFilter"
                android:text="Month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp" />
        </LinearLayout>

        <!-- Additional Buttons for Time Allocation Mode -->
        <LinearLayout
            android:id="@+id/timeAllocationButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnCategories"
                android:text="Categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp" />

            <Button
                android:id="@+id/btnTasks"
                android:text="Tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Chart Container -->
    <FrameLayout
        android:id="@+id/chartContainer"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/filterContainer"
        android:layout_marginTop="16dp">

        <!-- LineChart for Goal Tracker -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- BarChart for Task Tracker -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- PieChart for Time Allocation -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- RadarChart for Goal Overview -->
        <com.github.mikephil.charting.charts.RadarChart
            android:id="@+id/radarChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Statistics Text View -->
    <TextView
        android:id="@+id/tvStatistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:layout_below="@id/chartContainer"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:padding="8dp" />

</RelativeLayout>
